@model ClinicManagementSystem.Models.Patient

@{
    ViewData["Title"] = "PatientPage";
}
<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <title>Patients</title>
    <link rel="icon" type="image/x-icon" href="~/images/Stone-Clinic-Icon.ico" />
    
</head>
<body style="background-image: url('../images/HomePage.jpg')">
    @*<img src="~/images/Stone-Clinic-Logo.png" style="width:100px;height:100px" />*@
    <h1>PatientPage</h1>

    @*<h4>Patient</h4>*@
    <center>
        <div style="background-image: url('../images/2008087.jpg');height:40px;border-top-left-radius:4px;border-top-right-radius:4px;border-bottom-left-radius:4px;border-bottom-right-radius:4px">
            <a href="HomePage"><img src="~/images/Stone-Clinic-Logo.png" style="width:32px;height:32px" /></a>
            <input type="button" value="ADD DOCTOR" onclick="location.href = '@Url.Action("DoctorPage","Home")'" class="btn btn-dark" />
            <input type="button" value="ADD PATIENT" onclick="location.href = '@Url.Action("PatientPage","Home")'" class="btn btn-dark" />
            <input type="button" value="VIEW PATIENTS" onclick="location.href = '@Url.Action("ViewPatient","Home")'" class="btn btn-dark" />
            <input type="button" value="SCHEDULE APPOINTMENT" onclick="location.href = '@Url.Action("ScheduleAppmnt","Home")'" class="btn btn-dark" />
            <input type="button" value="VIEW APPOINTMENT" onclick="location.href = '@Url.Action("ViewAppmnt","Home")'" class="btn btn-dark" />
            <input type="button" value="Log-out" onclick="location.href = '@Url.Action("Index","Home")'" class="btn btn-danger" />

        </div>
    </center>
    <hr />
    <div >
        <center>
            <div style="background-color:whitesmoke;border-radius:6px">

                <form asp-action="AddPatient" asp-controller="Home" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control text-center" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control text-center" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sex" class="control-label"></label><br />
                        @Html.RadioButtonFor(m => m.Sex, "Male")Male<br />
                        &nbsp;&nbsp;&nbsp;@Html.RadioButtonFor(m => m.Sex, "Female")Female<br />
                        &nbsp;&nbsp;@Html.RadioButtonFor(m => m.Sex, "Others")Others<br /><hr />
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateofBirth" class="control-label"></label>
                        @*<input asp-for="DateofBirth" type="date" id="dt" onchange="mydate1();"/>*@
                        <input asp-for="DateofBirth" type="date" class="form-control text-center" required />
                        <span asp-validation-for="DateofBirth" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" id="agecal" class="form-control" required max="120" min="1" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>*@

                    <div class="form-group">
                        @Html.Raw(TempData["msg"])
                        <input type="submit" value="Add" class="btn btn-outline-dark" />
                        <input type="button" value="Home" onclick="location.href = '@Url.Action("HomePage","Home")'" class="btn btn-outline-dark" />
                        <input type="button" value="Log-out" onclick="location.href = '@Url.Action("Index","Home")'" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </center>
    </div>


</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
